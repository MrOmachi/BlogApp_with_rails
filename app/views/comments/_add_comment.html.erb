<%= form_with model: Comment, url: user_post_comments_path(@post.author, @post) do |f| %>
     <div>
       <%= f.label :text %>
       <%= f.text_area :text, placeholder: "Type In comment", row: 20, required: true %>
     </div>

     <div> 
       <%= f.submit "save" %>
     </div>

     <%= end %>