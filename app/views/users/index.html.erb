<section>
      <ul class="users_list">
          <% @users.each do |user| %>
               <li class = 'user' >
                    <div> 
                    <img src='<%= user.photo %>' alt='<%= user.name %> thumbnail' />
                    </div>
                    <div class='user-name'>
                         <h2><%= link_to user.name, user_path(user) %></h2>
                         <p>Number of Posts: <%= user.posts_counter %></p>
                    </div>
               </li>
          <% end %>
     </ul>
</section>